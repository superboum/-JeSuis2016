video#bgvid(ng-repeat="elem in content" ng-show="$index == selected_content" autoplay=true, muted=true, loop=true, poster="{{ elem.article.video.png }}")
  source(ng-src="{{ elem.article.video.webm }}" type="video/webm" )
  source(ng-src="{{ elem.article.video.mp4 }}" type="video/mp4" )


.wrapper(style="width: auto;")
  div(style="display:flex; height: 50%; width: auto;")
    .event.small
      .space
        h1 Les grands évènements Ouest France
        h2 Avez vous bien suivi l'actualité ?
    .event.large.top(ng-repeat="elem in content_top" )
      .space(style="width: 80%;")
        h1 {{ elem.article.title }}
        p {{ elem.article.text }}
        a(href="", ng-click="next($index*2+2)") Next
        .anchor_hack(id="event-{{ $index * 2 + 1}}")
      .placeholder
        .circle
          .arc
          .arc.secondarc

  div(style="display:flex; height: 50%; width: auto")
    .event.large.bottom(ng-repeat="elem in content_bottom")
      .space(style="width: 80%;" )
        h1 {{ elem.article.title }}
        p {{ elem.article.text }}
        a(href="", ng-click="next($index*2+1)") Next
        .anchor_hack(id="event-{{ $index * 2}}")
      .placeholder
        .circle
          .arc
          .arc.secondarc
